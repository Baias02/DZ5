<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_fon"
    tools:context=".MainActivity">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/facebook"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/purple_500"
        android:drawableEnd="@android:drawable/ic_input_add"
        android:paddingLeft="20dp"
        android:text="facebook"
        android:textColor="@color/black"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/welcome"
        app:layout_constraintStart_toStartOf="@+id/welcome"
        app:layout_constraintTop_toBottomOf="@+id/welcome"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/black"
        android:drawableEnd="@android:drawable/ic_dialog_email"
        android:paddingLeft="20dp"
        android:text="email"
        android:textColor="@color/purple_500"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/facebook"
        app:layout_constraintStart_toStartOf="@+id/facebook"
        app:layout_constraintTop_toBottomOf="@+id/facebook"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/number"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/Gun"
        android:drawableEnd="?attr/actionModePasteDrawable"
        android:paddingLeft="20dp"
        android:text="number"
        android:textColor="@color/text"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/email"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/welcome"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="170dp"
        android:backgroundTint="@color/white"
        android:text="registration"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/gun"
        app:layout_constraintStart_toStartOf="@+id/gun"
        app:layout_constraintTop_toBottomOf="@+id/gun"
        />


    <TextView
        android:id="@+id/text_name"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:text="c.rysa"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="world peace"
        android:textColor="@color/text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/gunkg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Welcome"
        android:textColor="@color/text"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gun"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_dead"
        app:layout_constraintEnd_toEndOf="@id/text_login"
        app:layout_constraintStart_toStartOf="@id/text_login"
        app:layout_constraintTop_toBottomOf="@id/text_login" />


    <TextView

        android:id="@+id/text_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Aksy"
        android:textColor="@color/text"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/gun"
        app:layout_constraintStart_toStartOf="@id/gun"
        app:layout_constraintTop_toBottomOf="@id/gun"

        />


</androidx.constraintlayout.widget.ConstraintLayout>